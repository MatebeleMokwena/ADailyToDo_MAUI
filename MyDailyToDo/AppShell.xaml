<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyDailyToDo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyDailyToDo"
    Shell.FlyoutBehavior="Disabled"
    Title="MyDailyToDo">

    <FlyoutItem Title="Dash" >

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="Progress report"
        ContentTemplate="{DataTemplate local:Your_Proggress_Record}"
        Route="MainPage" />
        
    </FlyoutItem>
    

</Shell>
